<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 自定义数字键盘，默认灰色边框，白色背景，按下去变灰色背景-->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/keyboard_num_btn_color" />
            <stroke android:width="1px" android:color="@color/keyboard_num_btn_color"></stroke>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="1px" android:color="@color/keyboard_num_btn_color"></stroke>
        </shape>
    </item>
</selector>